<html>
<body>
<form action="/produtos" method="post">
    <div class="erros">
        <%if(errosValidacao){%>
            <ul>
                <%for(var i=0; i<errosValidacao.length; i++){%>
                    <li><%=errosValidacao[i].param%> - <%=errosValidacao[i].msg%></li>
                <%}%>
            </ul>
        <%}%>
    </div>
    <div>
        <label for="titulo">Título</label>
        <input type="text" id="titulo" name="titulo" placeholder="coloque o titulo" value="<%=produto.titulo%>" >
    </div>
    <div>
        <label for="preco">Preço</label>
        <input type="text" id="preco" name="preco" placeholder="123.99" value="<%=produto.preco%>" >
    </div>
    <div>
        <label for="descricao">Descrição</label>
        <textarea cols="10" rows="5" id="descricao" name="descricao" placeholder="coloque a descrição"><%=produto.descricao%></textarea>
    </div>
    <input type="submit" value="Salvar">
</form>
</body>
</html>
